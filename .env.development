# ===================================
# DESARROLLO LOCAL (Docker Compose)
# ===================================

NODE_ENV=development
PORT=3000

# Kafka local (docker-compose)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=continental-dashboard
KAFKA_GROUP_ID=dashboard-consumer-group
KAFKA_TOPIC=continental.events

# MySQL local (docker-compose)
DB_MASTER_HOST=localhost
DB_MASTER_PORT=3306
DB_MASTER_USER=continental_user
DB_MASTER_PASSWORD=password
DB_MASTER_DATABASE=continental_db

DB_SLAVE_HOST=localhost
DB_SLAVE_PORT=3306
DB_SLAVE_USER=continental_user
DB_SLAVE_PASSWORD=password
DB_SLAVE_DATABASE=continental_db

# Kong local
KONG_GATEWAY_URL=http://localhost:8000
CONTRACT_SERVICE_URL=http://localhost:8000/api/v1/contracts

FRONTEND_URL=http://localhost:8080
SOCKET_IO_ENABLED=true

MAX_RETRIES=3
RETRY_DELAY_MS=1000
BACKOFF_MULTIPLIER=2

LOG_LEVEL=debug
