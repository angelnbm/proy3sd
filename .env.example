# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Kafka Configuration
KAFKA_BROKERS=lxc-501:9092,lxc-502:9092
KAFKA_CLIENT_ID=continental-dashboard
KAFKA_GROUP_ID=dashboard-consumer-group
KAFKA_TOPIC=continental.events

# MySQL Configuration (Master - LXC 302)
DB_MASTER_HOST=lxc-302
DB_MASTER_PORT=3306
DB_MASTER_USER=continental_user
DB_MASTER_PASSWORD=your_password_here
DB_MASTER_DATABASE=continental_db

# MySQL Configuration (Slave - LXC 303)
DB_SLAVE_HOST=lxc-303
DB_SLAVE_PORT=3306
DB_SLAVE_USER=continental_user
DB_SLAVE_PASSWORD=your_password_here
DB_SLAVE_DATABASE=continental_db

# Kong Gateway (LXC 400)
KONG_GATEWAY_URL=http://lxc-400:8000

# Contract Service (App 2) - Through Kong
CONTRACT_SERVICE_URL=http://lxc-400:8000/api/v1/contracts

# Retry Configuration
MAX_RETRIES=5
RETRY_DELAY_MS=3000
BACKOFF_MULTIPLIER=2

# WebSocket Configuration
SOCKET_IO_ENABLED=true
SOCKET_IO_PATH=/socket.io

# Logging
LOG_LEVEL=info
LOG_FILE=logs/continental-dashboard.log
