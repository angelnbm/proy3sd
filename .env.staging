# ===================================
# AMBIENTE DE STAGING (Testing Previo)
# ===================================

NODE_ENV=staging
PORT=3000

# Kafka Cluster (Staging)
KAFKA_BROKERS=staging-kafka1:9092,staging-kafka2:9092
KAFKA_CLIENT_ID=continental-dashboard-staging
KAFKA_GROUP_ID=dashboard-consumer-group-staging
KAFKA_TOPIC=continental.events

# MySQL Master (Staging)
DB_MASTER_HOST=staging-mysql-master
DB_MASTER_PORT=3306
DB_MASTER_USER=continental_user
DB_MASTER_PASSWORD=STAGING_PASSWORD
DB_MASTER_DATABASE=continental_db_staging

# MySQL Slave (Staging)
DB_SLAVE_HOST=staging-mysql-slave
DB_SLAVE_PORT=3306
DB_SLAVE_USER=continental_user
DB_SLAVE_PASSWORD=STAGING_PASSWORD
DB_SLAVE_DATABASE=continental_db_staging

# Kong Gateway (Staging)
KONG_GATEWAY_URL=http://staging-kong:8000
CONTRACT_SERVICE_URL=http://staging-kong:8000/api/v1/contracts

# Frontend URL
FRONTEND_URL=http://staging-dashboard:8080

# WebSockets
SOCKET_IO_ENABLED=true
SOCKET_IO_PATH=/socket.io

# Tolerancia a fallos
MAX_RETRIES=3
RETRY_DELAY_MS=2000
BACKOFF_MULTIPLIER=2

# Logging (m√°s verbose en staging)
LOG_LEVEL=debug
LOG_DIR=/var/log/continental-dashboard
