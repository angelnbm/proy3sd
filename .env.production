NODE_ENV=production
PORT=3000

# Kafka Cluster (LXC 501, 502)
KAFKA_BROKERS=192.168.1.51:9092,192.168.1.52:9092
KAFKA_CLIENT_ID=continental-dashboard
KAFKA_GROUP_ID=dashboard-consumer-group
KAFKA_TOPIC=continental.events

# MySQL Master (LXC 302) - ESCRITURAS
DB_MASTER_HOST=192.168.1.32
DB_MASTER_PORT=3306
DB_MASTER_USER=continental_user
DB_MASTER_PASSWORD=CHANGE_THIS_PASSWORD
DB_MASTER_DATABASE=continental_db

# MySQL Slave (LXC 303) - LECTURAS
DB_SLAVE_HOST=192.168.1.33
DB_SLAVE_PORT=3306
DB_SLAVE_USER=continental_user
DB_SLAVE_PASSWORD=CHANGE_THIS_PASSWORD
DB_SLAVE_DATABASE=continental_db

# Kong Gateway (LXC 400)
KONG_GATEWAY_URL=http://192.168.1.40:8000
CONTRACT_SERVICE_URL=http://192.168.1.40:8000/api/v1/contracts

# Frontend URL
FRONTEND_URL=http://192.168.1.31:8080

# WebSockets
SOCKET_IO_ENABLED=true
SOCKET_IO_PATH=/socket.io

# Tolerancia a fallos
MAX_RETRIES=5
RETRY_DELAY_MS=3000
BACKOFF_MULTIPLIER=2

# Logging
LOG_LEVEL=info
LOG_DIR=/opt/continental-dashboard/logs
